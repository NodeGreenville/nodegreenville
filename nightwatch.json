{
  "src_folders" : ["tests/TDD", "tests/BDD"],
  "output_folder" : "reports",

  "selenium" : {
    "start_process": true,
    "server_path" : "./bin/selenium-server-standalone-2.53.0.jar",
    "log_path" : "",
    "host" : "127.0.0.1",
    "port" : 4444,
    "cli_args" : {
      "webdriver.chrome.driver" : "",
      "webdriver.ie.driver" : ""
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "pathname" : "/wd/hub/",
      "silent": true,
      "screenshots" : {
        "enabled" : false,
        "path" : ""
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      },
      "exclude": "tests/TDD"
    },
    "TDD": {
      "selenium": {
        "start_process": false,
        "start_session": false
      },
      "filter": "tests/TDD/*",
      "exclude": ""
    },
    "BDD": {
      "selenium": {
        "start_session": true
      },
      "filter": "tests/BDD/*",
      "exclude": ""
    },

    "chrome" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
